<Window x:Class="GameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game of Life" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- First row of controls -->
            <RowDefinition Height="Auto"/>
            <!-- Second row of controls -->
            <RowDefinition Height="*"/>
            <!-- Game board -->
        </Grid.RowDefinitions>
        <!-- First row of controls -->
        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0">
            <Button x:Name="StartStopButton" Content="Start" Width="75" Click="StartStopButton_Click"/>
            <Button x:Name="StepButton" Content="Step" Width="75" Margin="5,0,0,0" Click="StepButton_Click"/>
            <Button x:Name="ResetButton" Content="Reset" Width="75" Margin="5,0,0,0" Click="ResetButton_Click"/>
            <TextBlock Margin="10,0,0,0" Text="Speed:" VerticalAlignment="Center"/>
            <Slider x:Name="SpeedSlider" Minimum="100" Maximum="2000" Value="500" Width="100" Margin="5,0,0,0" IsDirectionReversed="True" ValueChanged="SpeedSlider_ValueChanged"/>
        </StackPanel>
        <!-- Second row of controls -->
        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="1">
            <TextBlock Text="Cell Shape:" VerticalAlignment="Center"/>
            <ComboBox x:Name="CellShapeComboBox" Width="80" Margin="5,0,0,0" SelectionChanged="CellShapeComboBox_SelectionChanged">
                <ComboBoxItem Content="Square" IsSelected="True"/>
                <ComboBoxItem Content="Circle"/>
            </ComboBox>
            <TextBlock Margin="10,0,0,0" Text="Cell Color:" VerticalAlignment="Center"/>
            <ComboBox x:Name="CellColorComboBox" Width="80" Margin="5,0,0,0" SelectionChanged="CellColorComboBox_SelectionChanged">
                <ComboBoxItem Content="Black" IsSelected="True"/>
                <ComboBoxItem Content="Red"/>
                <ComboBoxItem Content="Green"/>
                <ComboBoxItem Content="Blue"/>
                <ComboBoxItem Content="Yellow"/>
            </ComboBox>
            <TextBlock Margin="10,0,0,0" Text="Generation:" VerticalAlignment="Center"/>
            <TextBlock x:Name="GenerationTextBlock" Text="0" Margin="5,0,0,0" VerticalAlignment="Center"/>
            <TextBlock Margin="10,0,0,0" Text="Born:" VerticalAlignment="Center"/>
            <TextBlock x:Name="BornTextBlock" Text="0" Margin="5,0,0,0" VerticalAlignment="Center"/>
            <TextBlock Margin="10,0,0,0" Text="Died:" VerticalAlignment="Center"/>
            <TextBlock x:Name="DiedTextBlock" Text="0" Margin="5,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>
        <!-- Game board -->
        <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <UniformGrid x:Name="GameBoard" />
        </ScrollViewer>
    </Grid>
</Window>
